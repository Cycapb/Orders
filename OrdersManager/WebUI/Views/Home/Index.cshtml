@using System.Globalization
@model IEnumerable<Domain.OrderToUnload>
@{
    ViewBag.Title = "Orders";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        @using (Ajax.BeginForm("ListByDate", null, new AjaxOptions()
        {
            Url = Url.Action("ListByDate"),
            UpdateTargetId = "orderPanel",
            OnComplete = "enableButtons"
        }, new {@class = "form-inline"}))
        {
            @Html.Label("Dates From:")
            @Html.TextBox("dtBeg", null, new {@class = "form-control", onclick = "clickDtBeg()", Value = Convert.ToString(DateTime.Today.ToShortDateString(),CultureInfo.InvariantCulture) })
            @Html.Label("To:")
            @Html.TextBox("dtEnd", null, new {@class = "form-control", onclick = "clickDtEnd()", Value = Convert.ToString(DateTime.Today.ToShortDateString(), CultureInfo.InvariantCulture) })

            <input type="submit" value="Create report" class="btn btn-success btn-sm" id="createBt" onclick="disableButtons()"/>
        }
    </div>
    <div class="panel-body" id="orderPanel">
        @Html.Partial("_List", Model)
    </div>
</div>