@model WebUI.Models.EmailViewModel
<div class="pull-right" id="excelDiv">
    @using (Ajax.BeginForm("Unload", null, new AjaxOptions()
    {
        Url = Url.Action("Unload"),
        UpdateTargetId = "unloadId",
        LoadingElementId = "unloadingDiv",
        LoadingElementDuration = 500,
        OnComplete = "enableExcelDiv"
    }, new { @class = "form-inline" }))
    {
        <div class="form-group">
            @Html.ValidationMessageFor(x => x.MailTo)
            <label>Email:</label>
            @Html.TextBoxFor(x => x.MailTo, new { @class = "form-control" })
        </div>
        <input type="submit" value="Unload to excel" class="btn btn-success btn-sm" id="unloadBt" onclick="disableExcelDiv()"/>
    }
</div>

