@using System.Globalization
@model IEnumerable<Domain.OrderToUnload>
<table class="table table-hover">
    <tr>
        <th>Order_ID</th>
        <th>Order_Date</th>
        <th>Product_ID</th>
        <th>Product_Name</th>
        <th>Quantity</th>
        <th>Unit_Price</th>
    </tr>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="6" class="text-center">There are no orders</td>
        </tr>
    }
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@Convert.ToString(order.OrderDate.Value.ToShortDateString(),CultureInfo.InvariantCulture)</td>
            <td>@order.ProductId</td>
            <td>@order.ProductName</td>
            <td>@order.ProductQuantity</td>
            <td>@order.UnitPrice</td>
        </tr>
    }
</table>
